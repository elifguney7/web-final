    <main class="container">        
        <div class="categories searchCategories">
            <h5>News</h5>
            <a href="#"><%= i18n.t('categories.SPORT') %></a>
            <a href="#"><%= i18n.t('categories.GAMING') %></a>
            <a href="#"><%= i18n.t('categories.FINANCE') %></a>
            <a href="#"><%= i18n.t('categories.BUSINESS') %></a>
            <a href="#"><%= i18n.t('categories.ENTERTAINMENT') %></a>
            <a href="#"><%= i18n.t('categories.SHOPPING') %></a>
            <a href="#"><%= i18n.t('categories.TRAVEL') %></a>            
        </div>

        <% results.forEach(result => { %>
            <div class="searchNewsItems">
                <a href="/news/<%= result.news_id %>">
                <img src="<%= result.images %>" alt="<%= result.title %>">
                <div class="searchText">
                    <div class="sourceNHours">                        
                        <p style="margin-right: 1rem;"><%= result.source %></p>
                        <p><%= result.hoursSinceInserted %> h</p> 
                    </div>                    
                    <h5><%= result.title %></h5>
                    <!-- <p><%= result.explanation %></p>                    -->
                </div>
                </a>
            </div>
        <% }) %>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
